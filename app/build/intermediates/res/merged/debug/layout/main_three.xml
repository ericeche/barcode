<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_bg_v" >

   

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            >
            <LinearLayout
                android:id="@+id/stocktakingll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="btnClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/stocktaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnClick"
                    android:src="@drawable/lishi_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="history"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/readll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/localDB"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="btnClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnClick"
                    android:src="@drawable/read_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Inspection"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/writell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/readll"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="50dp"
                android:layout_toLeftOf="@+id/readll"
                android:clickable="true"
                android:gravity="center"
                android:onClick="btnClick"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:onClick="btnClick"
                    android:src="@drawable/write_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Write"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>
        </RelativeLayout>


</RelativeLayout>