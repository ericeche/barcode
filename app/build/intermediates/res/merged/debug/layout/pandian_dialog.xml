<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:background="@drawable/pandian_panel_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/pandian_listitem_sbebeimingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pandian_listitem_shebeimingcheng2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pandian_listitem_sbebeimingcheng"
            android:text="二号母线间"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pandian_listitem_xunshirenyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pandian_listitem_sbebeimingcheng"
            android:layout_below="@id/pandian_listitem_sbebeimingcheng"
            android:paddingTop="10dp"
            android:text="巡视人员："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pandian_listitem_xunshirenyuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pandian_listitem_xunshirenyuan"
            android:layout_alignBottom="@+id/pandian_listitem_xunshirenyuan"
            android:layout_toRightOf="@+id/pandian_listitem_xunshirenyuan"
            android:text="李越"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pandian_panel_quexian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pandian_listitem_xunshirenyuan"
            android:layout_below="@id/pandian_listitem_xunshirenyuan"
            android:paddingTop="10dp"
            android:text="巡视时间："
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/pandian_listitem_xunshishijian2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pandian_panel_quexian1"
            android:layout_alignBottom="@+id/pandian_panel_quexian1"
            android:layout_alignLeft="@+id/pandian_listitem_xunshirenyuan2"
            android:text="2015-03-16"
            android:textColor="@android:color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="#888888" >
    </LinearLayout>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="60dp"
        android:textColor="@color/text_blue"
        android:textColorHint="@color/text_blue"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#888888" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/queding"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确　定"
            android:textColor="@color/text_blue" />

        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#888888" >
        </LinearLayout>

        <TextView
            android:id="@+id/quxiao"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取　消"
            android:textColor="@color/text_blue" />
    </LinearLayout>

</LinearLayout>