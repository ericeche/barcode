<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/history_bg_green"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/number"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_margin="15dp"
            android:background="@drawable/text_circle_green_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/pandian_listitem_sbebeimingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_shebeimingcheng2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pandian_listitem_sbebeimingcheng"
                android:text="二号母线间"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_quexianneirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_sbebeimingcheng"
                android:layout_below="@id/pandian_listitem_sbebeimingcheng"
                android:paddingTop="5dp"
                android:text="缺陷内容："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_quexianneirong2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_listitem_quexianneirong"
                android:layout_alignBottom="@+id/pandian_listitem_quexianneirong"
                android:layout_toRightOf="@+id/pandian_listitem_quexianneirong"
                android:text="无"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_xunshirenyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_quexianneirong"
                android:layout_below="@id/pandian_listitem_quexianneirong"
                android:paddingTop="5dp"
                android:text="巡视人员："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_xunshirenyuan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_listitem_xunshirenyuan"
                android:layout_alignBottom="@+id/pandian_listitem_xunshirenyuan"
                android:layout_toRightOf="@+id/pandian_listitem_xunshirenyuan"
                android:text="李越"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_xunshishijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_xunshirenyuan"
                android:layout_below="@id/pandian_listitem_xunshirenyuan"
                android:paddingTop="5dp"
                android:text="巡视时间："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_xunshishijian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_listitem_xunshishijian"
                android:layout_alignBottom="@+id/pandian_listitem_xunshishijian"
                android:layout_toRightOf="@+id/pandian_listitem_xunshishijian"
                android:text="2015-03-16"
                android:textColor="@android:color/black" />

                        <TextView
                android:id="@+id/jingdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_xunshirenyuan"
                android:layout_below="@id/pandian_listitem_xunshishijian"
                android:paddingTop="5dp"
                android:text="　　经度：117°00′"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/weidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/jingdu"
                android:layout_alignBottom="@+id/jingdu"
                android:layout_toRightOf="@+id/jingdu"
                android:text="纬度：36°40′"
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@+id/pandian_panel_tianbaoshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/pandian_listitem_xunshishijian"
                android:layout_below="@+id/weidu"
                android:paddingTop="5dp"
                android:text="　　备注："
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/pandian_listitem_tianbaoshijian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_panel_tianbaoshijian"
                android:layout_alignBottom="@+id/pandian_panel_tianbaoshijian"
                android:layout_toRightOf="@+id/pandian_panel_tianbaoshijian"
                android:text="无"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>