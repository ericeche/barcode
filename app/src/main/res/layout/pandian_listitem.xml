<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandian_panel_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/number"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/text_circle_green_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/pandian_listitem_sbebeimingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称："
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pandian_listitem_shebeimingcheng2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pandian_listitem_sbebeimingcheng"
                android:text="二号母线间"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pandian_listitem_xunshirenyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_sbebeimingcheng"
                android:layout_below="@id/pandian_listitem_sbebeimingcheng"
                android:paddingTop="10dp"
                android:text="巡视人员："
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pandian_listitem_xunshirenyuan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_listitem_xunshirenyuan"
                android:layout_alignBottom="@+id/pandian_listitem_xunshirenyuan"
                android:layout_toRightOf="@+id/pandian_listitem_xunshirenyuan"
                android:text="李越"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pandian_panel_quexian1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/pandian_listitem_xunshirenyuan"
                android:layout_below="@id/pandian_listitem_xunshirenyuan"
                android:paddingTop="10dp"
                android:text="巡视时间："
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/pandian_listitem_xunshishijian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/pandian_panel_quexian1"
                android:layout_alignBottom="@+id/pandian_panel_quexian1"
                android:layout_alignLeft="@+id/pandian_listitem_xunshirenyuan2"
                android:text="2015-03-16"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/quexian_imgview"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/pandian_listitem_shebeimingcheng2"
                android:layout_marginRight="15dp"
                android:scaleType="centerInside"
                android:tag="@drawable/quexian_btn"
                android:src="@drawable/quexian_btn" />

            <ImageView
                android:id="@+id/beizhu_imgview"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@id/pandian_listitem_xunshishijian2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:scaleType="centerInside"
                android:tag="@drawable/beizhu_btn"
                android:src="@drawable/beizhu_btn" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/black" >
    </LinearLayout>

</LinearLayout>